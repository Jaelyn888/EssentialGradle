<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_margin"
        android:paddingRight="@dimen/margin_12dp"
        android:paddingTop="@dimen/common_margin" >

        <ImageView
            android:id="@+id/brand_logo"
            android:layout_width="@dimen/logosize_shopcar"
            android:layout_height="@dimen/logosize_shopcar"
            android:layout_marginStart="@dimen/margin_12dp"
            android:scaleType="fitXY"
            android:src="@drawable/brand_logo" />

        <TextView
            android:id="@+id/brandName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/common_margin"
            android:textColor="@color/TextColorBlack"
            android:textSize="@dimen/textsize_14" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/TextColorBlack"
            android:textSize="@dimen/textsize_14" />
    </LinearLayout>

    <com.yishanxiu.yishang.view.ListViewNoScroll
        android:id="@+id/lv_noScrool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shopcar_bg"
        android:cacheColorHint="@color/white"
        android:descendantFocusability="beforeDescendants"
        android:divider="@color/white"
        android:dividerHeight="1dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@drawable/hor_line"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/LinearLayout01"
        style="@style/tablerow_none_f"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            style="@style/thirdAppTextStyleblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delivery_method" />

        <TextView
            android:id="@+id/TextView01"
            style="@style/fourthAppTextStyleblack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:paddingRight="@dimen/common_margin_more"
            android:text="@string/delivery_t" />
    </LinearLayout>

    <ImageView
        android:visibility="gone"
        style="@style/hor_line_style" />

    <LinearLayout
        style="@style/tablerow_none_f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/text_margin"
            android:text="@string/buyer_comments"
            android:textSize="@dimen/textsize" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:inputType="textMultiLine"
            android:paddingRight="@dimen/common_margin" >
        </EditText>
    </LinearLayout>

    <ImageView
        android:visibility="gone"
        style="@style/hor_line_style" />

    <LinearLayout
        android:id="@+id/llt_pro_count"
        style="@style/tablerow_none_f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pro_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/text_margin"
            android:text="@string/pro_count_t" />

        <TextView
            android:id="@+id/brand_totle_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/margin_12dp"
            android:textColor="@color/TextColorBlack" />
    </LinearLayout>

    <ImageView
        style="@style/hor_line_style" />

    <LinearLayout
        android:id="@+id/llt_cancelorder_payment"
        style="@style/tablerow_none_f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_margin"
        android:paddingRight="@dimen/margin_12dp"
        android:paddingTop="@dimen/common_margin" >

        <TextView
            android:id="@+id/cancel_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_12dp"
            android:background="@drawable/cus_black_white_bt"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_5dp"
            android:paddingLeft="@dimen/margin_8dp"
            android:paddingRight="@dimen/margin_8dp"
            android:paddingTop="@dimen/margin_5dp"
            android:text="@string/cancel_order"
            android:textSize="@dimen/textsize_tw" />

        <TextView
            android:id="@+id/payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_5dp"
            android:paddingLeft="@dimen/margin_8dp"
            android:paddingRight="@dimen/margin_8dp"
            android:paddingTop="@dimen/margin_5dp"
            android:text="@string/pay"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_tw" />
    </LinearLayout>

    <View
        android:id="@+id/view_divider"
        android:background="@color/gray_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comon_half_margin"/>
</LinearLayout>