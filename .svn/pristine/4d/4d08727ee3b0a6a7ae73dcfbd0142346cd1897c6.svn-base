<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_40dp"
    android:layout_marginRight="@dimen/margin_40dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/white_dialog_ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/white_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin"
            android:paddingTop="@dimen/common_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16"
            android:textStyle="bold" />

        <ImageView
            style="@style/hor_line_style"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/white_dialog_ll_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/white_dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:paddingBottom="@dimen/margin_27dp"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin"
            android:paddingTop="@dimen/margin_27dp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/white_dialog_massage_line"
            style="@style/hor_line_style" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/white_dialog_ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/white_one_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/margin_12dp"
            android:textColor="@color/TextColor_blue" />

        <LinearLayout
            android:id="@+id/white_ll_two_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/white_ll_two_line"
                style="@style/vertical_line_style" />

            <TextView
                android:id="@+id/white_two_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_12dp"
                android:textColor="@color/TextColor_blue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/white_ll_three_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/white_ll_three_line"
                style="@style/vertical_line_style" />

            <TextView
                android:id="@+id/white_three_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/common_margin"
                android:textColor="@color/TextColor_blue" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>