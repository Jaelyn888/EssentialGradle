<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/common_margin"
    android:layout_marginBottom="@dimen/common_margin"
    android:layout_marginStart="@dimen/common_margin"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.yishanxiu.yishang.view.CustomImageView
            android:id="@+id/relation_goods_iv"
            android:layout_width="@dimen/margin_100"
            android:layout_height="@dimen/margin_100"
            android:scaleType="fitXY"
            android:src="@drawable/brand_log_load_error"
            app:scaleRate="1" />         <!--   style="@style/common_image_style"-->


    </FrameLayout>

    <!--    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >-->

    <TextView
        android:id="@+id/brand_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comon_half_margin"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/black" />

    <!--      <TextView
              android:id="@+id/self_product_tv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="@dimen/common_margin"
              android:background="@color/textbg_red"
              android:gravity="center"
              android:text="@string/self_product"
              android:textColor="@color/white"
              android:textSize="@dimen/comon_half_margin"
              android:visibility="gone" />-->
    <!--</RelativeLayout>-->

    <TextView
        android:id="@+id/product_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comon_half_margin"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comon_half_margin"
        android:gravity="center">

        <TextView
            android:id="@+id/product_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/relation_product_price" />

        <TextView
            android:id="@+id/product_price_discount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textColor="@drawable/relation_product_price"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>