<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_8dp"
    android:paddingLeft="@dimen/common_margin"
    android:paddingRight="@dimen/common_margin"
    android:paddingTop="@dimen/margin_8dp" >

    <ImageView
        android:id="@+id/i_s_pl_aiv_pic1"
        android:layout_width="@dimen/brand_logo_height"
        android:layout_height="@dimen/brand_logo_height"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:src="@drawable/pic_load_error" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/i_s_a_o_tv_productname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_27dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/TextColorBlack" />

            <TextView
                android:id="@+id/i_s_a_o_tv_productnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_margin"
                android:textColor="@color/TextColorBlack" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/productSpecification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_27dp"
                android:layout_weight="1"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/textsize_tw" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/goods_price_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_27dp"
                android:layout_weight="1"
                android:textColor="@color/TextColorBlack" />

            <TextView
                android:id="@+id/productBrand_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/TextColorBlack"
                android:textSize="@dimen/textsize_tw" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>