<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.yishanxiu.yishang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    >

    <com.yishanxiu.yishang.view.CustomImageView
        android:id="@+id/big_iv"
        style="@style/common_image_fill_width_style"
        android:src="@drawable/pic_load_error"
        app:scaleRate="1.77" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginTop="@dimen/margin_5dp"
        android:gravity="center_vertical" >

        <com.yishanxiu.yishang.view.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/user_center_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/find_item_big_title_tv"
                style="@style/findBigTitleStyle"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@string/test_msg" />

            <TextView
                android:id="@+id/find_item_classfy_tv"
                style="@style/find_item_classfy_style"
                android:text="@string/msg_big_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/create_time_tv"
                    style="@style/find_item_classfy_style"
                    android:text="@string/time_test" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right" >

                    <TextView
                        android:id="@+id/find_item_scan_num_tv"
                        style="@style/find_item_classfy_style"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="@dimen/common_margin"
                        android:drawableLeft="@drawable/scan"
                        android:drawablePadding="@dimen/default_drawpadding"
                        android:gravity="right"
                        android:text="1234" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 每个类别推荐 -->

</LinearLayout>