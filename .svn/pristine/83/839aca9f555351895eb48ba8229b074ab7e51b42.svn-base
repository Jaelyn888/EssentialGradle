<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.yishanxiu.yishang"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal"
	android:gravity="center_horizontal"
	android:orientation="vertical">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<com.yishanxiu.yishang.view.CustomImageView
			android:id="@+id/relation_goods_iv"
			style="@style/common_image_style"
			android:scaleType="fitXY"
			android:src="@drawable/brand_log_load_error"
			app:scaleRate="1" />

		<ImageView
			android:id="@+id/self_product_iv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left|bottom"
			android:src="@drawable/link_from" />
	</FrameLayout>

	<!--    <RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			 >-->

	<TextView
		android:layout_marginTop="@dimen/comon_half_margin"
		android:id="@+id/brand_name_tv"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/black"
		android:gravity="center"
		android:singleLine="true" />

	<!--      <TextView
			  android:id="@+id/self_product_tv"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_alignParentRight="true"
			  android:layout_centerVertical="true"
			  android:layout_marginRight="@dimen/common_margin"
			  android:background="@color/textbg_red"
			  android:gravity="center"
			  android:text="@string/self_product"
			  android:textColor="@color/white"
			  android:textSize="@dimen/comon_half_margin"
			  android:visibility="gone" />-->
	<!--</RelativeLayout>-->

	<TextView
		android:id="@+id/product_name_tv"
		android:layout_marginTop="@dimen/comon_half_margin"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:singleLine="true"
		android:ellipsize="end"
		android:textColor="@color/black" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:layout_marginTop="@dimen/comon_half_margin">

		<TextView
			android:id="@+id/product_price_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@drawable/relation_product_price" />

		<TextView
			android:id="@+id/product_price_discount_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="5dp"
			android:textColor="@drawable/relation_product_price"
			android:visibility="visible" />
	</LinearLayout>

</LinearLayout>