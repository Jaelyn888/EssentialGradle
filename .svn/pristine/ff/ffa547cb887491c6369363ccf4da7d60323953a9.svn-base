<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/item_shopping_recipient" />

    <ImageView style="@style/hor_line_style" />

    <RelativeLayout
        android:id="@+id/rllt_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/margin_8dp"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:paddingTop="@dimen/margin_8dp" >

        <TextView
            android:id="@+id/select_addr_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/cus_check_bg"
            android:drawablePadding="@dimen/default_drawpadding"
            android:gravity="center_vertical"
            android:text="@string/user_like_address_default" />

        <TextView
            android:id="@+id/delete_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:drawableStart="@drawable/delete_addr"
            android:drawablePadding="@dimen/margin_5dp"
            android:text="@string/delete" />

        <TextView
            android:id="@+id/edit_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/margin_12dp"
            android:layout_toStartOf="@+id/delete_addr"
            android:drawableStart="@drawable/edit_addr"
            android:drawablePadding="@dimen/margin_5dp"
            android:text="@string/edit" />
    </RelativeLayout>

    <!--
            <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_8dp"
            android:background="@color/gray_bg"/>
    -->

</LinearLayout>