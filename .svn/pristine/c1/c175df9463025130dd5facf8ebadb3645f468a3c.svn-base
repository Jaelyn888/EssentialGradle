<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/common_margin"
              android:descendantFocusability="blocksDescendants">

    <ImageView
            android:id="@+id/pay_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pay_weichat"
            android:layout_marginLeft="@dimen/comon_half_margin"
            android:layout_marginRight="@dimen/common_margin"/>

    <TextView
            android:id="@+id/item_shopping_addorder_gvns_payment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/darkGray"
            android:textSize="16sp"
    />

    <CheckBox
            android:id="@+id/pay_select_iv"
            android:clickable="false"
            style="@style/shopChckBoxStyle"/>
</LinearLayout>
