<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/common_margin_other"
              android:paddingRight="@dimen/common_margin_other"
              android:paddingTop="@dimen/common_margin"
              android:paddingBottom="@dimen/common_margin"
        android:descendantFocusability="blocksDescendants">
    <com.yishanxiu.yishang.view.CustomImageView
            android:id="@+id/artical_logo_iv"
            android:src="@drawable/pic_load_error"
            android:layout_width="@dimen/article_search_logo_height"
            android:layout_height="@dimen/article_search_logo_height"
            />
    <LinearLayout
            android:paddingLeft="@dimen/common_margin_other"
            android:paddingRight="@dimen/default_drawpadding"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.cnfol.emoj.util.MyLiveTextView
                android:id="@+id/artical_title_tv"
                style="@style/findSearchBigTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="@string/artical_title_test"/>
        <com.cnfol.emoj.util.MyLiveTextView
                android:id="@+id/artical_disc_tv"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/comon_half_margin"
                style="@style/text_14_darkgrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/goods_dis_test"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <TextView
                    style="@style/text_14_darkgrey"
                    android:id="@+id/classfy_name_tv"
                    android:text="@string/classify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <com.cnfol.emoj.util.MyLiveTextView
                    android:text="@string/app_name"
                    android:id="@+id/author_tv"
                    style="@style/text_14_darkgrey"
                    android:layout_marginLeft="@dimen/common_margin_other"
                    android:layout_marginRight="@dimen/common_margin_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/time_test"
                    android:id="@+id/create_time_tv"
                    style="@style/text_14_darkgrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>