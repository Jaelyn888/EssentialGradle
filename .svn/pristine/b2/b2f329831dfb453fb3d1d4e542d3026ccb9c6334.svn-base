<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical" >

    <!-- 账号登录 -->

        <ImageView style="@style/hor_line_style"
            android:layout_marginTop="@dimen/common_margin"/>
        <EditText
            android:id="@+id/user_account_ed"
            style="@style/edit_login_reg_style"
            android:hint="@string/input_userAccount"
            android:inputType="number"
            android:maxLength="11" />

        <ImageView style="@style/hor_line_style" />

        <EditText
            android:id="@+id/user_pwd_ed"
            style="@style/edit_login_reg_style"
            android:hint="@string/input_userPwd"
            android:inputType="textPassword" />

        <ImageView style="@style/hor_line_style" />


    <TextView
        android:id="@+id/forget_pwd_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/comon_half_margin"
        android:padding="@dimen/common_margin"
        android:text="@string/forget_pwd"
        android:textColor="@color/darkGray" />

    <TextView
        android:id="@+id/login_bt"
        style="@style/blackBtStyle"
        android:layout_marginBottom="@dimen/common_height"
        android:layout_marginTop="@dimen/common_margin_three"
        android:text="@string/loginWithSpace" />

    <!-- 第三方登录 -->

    <LinearLayout
        android:id="@+id/third_login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/common_double_margin"
            android:layout_marginRight="@dimen/common_double_margin">

            <ImageView
                style="@style/hor_line_style"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                style="@style/text_14_darkgrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin"
                android:gravity="center"
                android:text="@string/title_activity_other_login" />

            <ImageView
                style="@style/hor_line_style"
                android:layout_height="1dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/login_qq_iv"
                style="@style/thirdLoginStyle"
                android:drawableTop="@drawable/qq"
                android:text="@string/qq" />

            <TextView
                android:id="@+id/login_wechat_iv"
                style="@style/thirdLoginStyle"
                android:drawableTop="@drawable/wechat"
                android:text="@string/weichat" />

            <TextView
                android:id="@+id/login_weibo_iv"
                style="@style/thirdLoginStyle"
                android:drawableTop="@drawable/sina"
                android:text="@string/sina" />

            <TextView
                android:id="@+id/login_alipay_iv"
                style="@style/thirdLoginStyle"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>