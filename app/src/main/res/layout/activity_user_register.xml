<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/gray_bg">


	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/common_margin"
		android:background="@color/white">
		<ImageView
			style="@style/hor_line_style"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
		   <TextView
			   style="@style/ed_lable_style"
			   android:text="@string/phone_t"/>
			<EditText
				style="@style/edit_login_reg_style"
				android:id="@+id/user_account_ed"
				android:layout_weight="1"
				android:maxLength="11"
				android:inputType="number"
				android:hint="@string/pls_input_account" />
			<TextView
				android:id="@+id/btn_send_code"
				style="@style/getMsgCodeStyle" />
		</LinearLayout>

		<ImageView style="@style/hor_line_style" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				style="@style/ed_lable_style"
				android:text="@string/codes"/>
			<EditText
			style="@style/edit_login_reg_style"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/user_code_ed"
			android:hint="@string/pls_input_code" />
			</LinearLayout>
		<ImageView style="@style/hor_line_style" />


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				style="@style/ed_lable_style"
				android:text="@string/user_pwd"/>
			<EditText
			style="@style/edit_login_reg_style"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/user_pwd_ed"
			android:hint="@string/input_password"
			android:inputType="textPassword" />
			</LinearLayout>

		<ImageView style="@style/hor_line_style" />


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				style="@style/ed_lable_style"
				android:text="@string/nick_name_space"/>
			<EditText
			style="@style/edit_login_reg_style"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/user_nickname_ed"
			android:hint="@string/input_nick_hint" />

			</LinearLayout>
		<ImageView style="@style/hor_line_style" />

	</LinearLayout>

	<TextView
		style="@style/blackBtStyle"
		android:layout_marginTop="@dimen/margin_40dp"
		android:id="@+id/user_register_bt"
		android:text="@string/user_register" />

</LinearLayout>