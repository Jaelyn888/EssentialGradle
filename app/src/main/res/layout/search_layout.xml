<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_search"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@color/TextColorBlack"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/comon_half_margin"
        android:layout_marginLeft="@dimen/common_double_margin"
        android:layout_marginTop="@dimen/comon_half_margin"
        android:layout_weight="1"
        android:background="@drawable/cus_search_bg"
        android:drawableLeft="@drawable/search"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/do_search_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/comon_half_margin"
            android:paddingRight="@dimen/comon_half_margin"
            android:src="@drawable/search" />

        <EditText
            android:id="@+id/search_ed"
            style="@style/searchStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/search" >

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/clear_search_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/comon_half_margin"
            android:paddingRight="@dimen/common_margin_other"
            android:src="@drawable/back_delete" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_search_cancel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:text="@string/cancel"
        android:textColor="@color/white" />

</LinearLayout>