<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlt_blog_pop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_transparent" >

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical" >

       <ImageView style="@style/hor_line_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/item_blog_pop_collection"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_h"
                android:background="@drawable/bt_nobgd"
                android:text="@string/collection"
                android:textColor="@color/TextColorGray"
                android:textSize="@dimen/title_center_size" />
        </LinearLayout>

        <ImageView style="@style/hor_line_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/item_blog_pop_adjust_group"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bt_nobgd"
                android:text="@string/adjust_group"
                android:textColor="@color/TextColorGray"
                android:textSize="@dimen/title_center_size" />
        </LinearLayout>

        <ImageView style="@style/hor_line_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/item_blog_pop_cancel_focus"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bt_nobgd"
                android:text="@string/cancel_focus"
                android:textColor="@color/TextColorGray"
                android:textSize="@dimen/title_center_size" />
        </LinearLayout>

        <ImageView style="@style/hor_line_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/item_blog_pop_report"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_h"
                android:background="@drawable/bt_nobgd"
                android:text="@string/report"
                android:textColor="@color/TextColorGray"
                android:textSize="@dimen/title_center_size" />
        </LinearLayout>

        <ImageView style="@style/hor_line_style" />

        <Button
            android:id="@+id/item_blog_pop_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_h"
            android:background="@drawable/bt_nobgd"
            android:text="@string/cancel"
            android:textColor="@color/TextColorRed"
            android:textSize="@dimen/title_center_size" />
    </LinearLayout>

</RelativeLayout>