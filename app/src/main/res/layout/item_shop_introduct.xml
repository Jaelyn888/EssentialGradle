<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shopName" />

        <TextView
                android:id="@+id/tv_shopintroduct_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/peiking_shop" />

    </LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/comon_half_margin"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/gray"
			android:text="@string/call_phone" />

		<TextView
			android:id="@+id/tv_shopintroduct_phone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/gray"
			android:layout_marginLeft="@dimen/comon_half_margin"
			android:text="@string/phone_number"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/comon_half_margin"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/gray"
			android:text="@string/shopping_order_detail_shouhuoren_dizhi" />

		<TextView
			android:id="@+id/tv_shopintroduct_address"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/gray"
			android:layout_marginLeft="@dimen/comon_half_margin"
			android:text="@string/s_u_r_i_tv_recipient_address"/>
	</LinearLayout>
</LinearLayout>