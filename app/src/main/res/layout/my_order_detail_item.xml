<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_margin"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:paddingTop="@dimen/common_margin" >

        <ImageView
            android:id="@+id/brand_logo"
            android:layout_width="@dimen/logosize_shopcar"
            android:layout_height="@dimen/logosize_shopcar"
            android:src="@drawable/brand_logo" />

        <TextView
            android:id="@+id/brandName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_margin"
            android:textColor="@color/TextColorBlack"
            android:textSize="@dimen/font_size12" />
        <!-- android:drawableRight="@drawable/right_bt" -->

        <TextView
            android:id="@+id/order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/TextColorBlack"
            android:textSize="@dimen/font_size12" />
    </LinearLayout>

    <com.yishanxiu.yishang.view.ListViewNoScroll
        android:id="@+id/lv_noScrool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shopcar_bg"
        android:cacheColorHint="@color/transparent"
        android:descendantFocusability="afterDescendants"
        android:divider="@color/white"
        android:dividerHeight="1dp"
        android:listSelector="@color/transparent"
        android:scrollbars="none"
        android:headerDividersEnabled="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@drawable/hor_line"
        android:visibility="gone" />

    <LinearLayout
        style="@style/tablerow_none_f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/text_margin"
            android:text="@string/buyer_comments"
            android:textSize="@dimen/textsize" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:inputType="textMultiLine"
            android:paddingRight="@dimen/common_margin" >
        </EditText>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@drawable/hor_line"
        android:visibility="gone" />

    <LinearLayout
        style="@style/tablerow_none_f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/pro_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/text_margin"
            android:text="@string/pro_count_t"
            android:textSize="@dimen/textsize" />

        <TextView
            android:id="@+id/brand_totle_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/text_margin"
            android:textColor="@color/TextColorBlack"
            android:textSize="@dimen/textsize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:paddingTop="@dimen/common_margin" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费"
            android:textColor="@color/TextColorBlack"
            android:textSize="@dimen/textsize_tw" />

        <TextView
            android:id="@+id/freight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="￥0.00"
            android:textColor="@color/TextColorGray"
            android:textSize="@dimen/textsize_tw" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_margin"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:paddingTop="@dimen/common_margin" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付款（含运费）"
            android:textColor="@color/TextColorBlack" />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="￥5.00" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/gray_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/common_margin"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:paddingTop="@dimen/common_margin" >

        <TextView
            android:id="@+id/order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TextColorGray"
            android:textSize="@dimen/textsize_tw" />

        <TextView
            android:id="@+id/create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TextColorGray"
            android:textSize="@dimen/textsize_tw" />

        <TextView
            android:id="@+id/modify_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TextColorGray"
            android:textSize="@dimen/textsize_tw"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/gray_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/common_margin"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:paddingTop="@dimen/common_margin" >

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TextColorBlack"
            android:textSize="@dimen/textsize_tw" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/gray_bg" />

    <LinearLayout
        android:id="@+id/llt_cancelorder_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_margin"
        android:paddingRight="@dimen/margin_12dp"
        android:paddingTop="@dimen/common_margin" >

        <TextView
            android:id="@+id/cancel_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_12dp"
            android:background="@drawable/cus_black_white_bt"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_5dp"
            android:paddingLeft="@dimen/margin_8dp"
            android:paddingRight="@dimen/margin_8dp"
            android:paddingTop="@dimen/margin_5dp"
            android:textSize="@dimen/textsize_tw" />

        <TextView
            android:id="@+id/payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_5dp"
            android:paddingLeft="@dimen/margin_8dp"
            android:paddingRight="@dimen/margin_8dp"
            android:paddingTop="@dimen/margin_5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_tw" />
    </LinearLayout>

</LinearLayout>