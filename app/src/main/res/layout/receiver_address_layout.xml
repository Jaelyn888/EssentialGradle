<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/s_a_o_ll_shouhuorenxinxi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/common_margin_more"
    android:paddingLeft="@dimen/common_margin"
    android:paddingRight="@dimen/common_margin"
    android:paddingTop="@dimen/common_margin_more" >

    <TextView
        android:id="@+id/noAddressTv"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:text="@string/select_addr"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/recepientLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shopping_tv_text_shouhuoren"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/s_a_o_tv_shouhuoren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/comon_half_margin"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/s_a_o_tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/shopping_tv_phone"
                android:textColor="@color/black" />
            <!--
                		<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/shopping_tv_text_phone"
							android:visibility="invisible" />


					</LinearLayout>
            -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comon_half_margin"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/address_lable_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shopping_tv_text_address"
                android:textColor="@color/darkGray" />

            <TextView
                android:id="@+id/s_a_o_tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shopping_tv_address"
                android:textColor="@color/darkGray" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/right_image"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/right_bt"
        android:visibility="gone" />

</LinearLayout>