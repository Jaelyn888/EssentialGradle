<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/order_confirm_tv_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/common_margin_three"
        android:layout_marginTop="@dimen/common_margin_three"
        android:drawableLeft="@drawable/gift"
        android:drawablePadding="@dimen/common_margin"
        android:gravity="center_vertical"
        android:text="@string/order_confirm_sending"
        android:textSize="@dimen/font_size16" />

    <ImageView style="@style/hor_line_style" />

    <include layout="@layout/receiver_address_layout"/>

    <ImageView style="@style/hor_line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/common_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_totle_money"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/totle_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textSize="@dimen/font_size16"
            android:textColor="@color/black"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_double_margin"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/order_detail_tv"
            android:background="@drawable/cus_round_black_border_bt"
           android:paddingTop="@dimen/common_margin_other"
            android:paddingBottom="@dimen/common_margin_other"
            android:paddingLeft="@dimen/common_margin_more"
            android:paddingRight="@dimen/common_margin_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_confirm_order_detail"
            android:layout_marginRight="@dimen/pay_result_gap_bt"/>



        <TextView
            android:id="@+id/continue_buy_tv"
            android:background="@drawable/cus_round_black_border_bt"
            android:paddingTop="@dimen/common_margin_other"
            android:paddingBottom="@dimen/common_margin_other"
            android:paddingLeft="@dimen/common_margin_more"
            android:paddingRight="@dimen/common_margin_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/continue_buy" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin"
        android:background="@color/gray_bg" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/common_margin"
        android:text="@string/relation_goods"
        android:textSize="@dimen/font_size16" />

    <ImageView style="@style/hor_line_style" />

</LinearLayout>