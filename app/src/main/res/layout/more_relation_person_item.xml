<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/brand_logo_height"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/common_margin"
    android:paddingRight="@dimen/common_margin" >

    <ImageView
        android:id="@+id/user_photo_iv"
        android:layout_width="@dimen/margin_45dp"
        android:layout_height="@dimen/margin_45dp"
        android:layout_marginBottom="@dimen/common_margin"
        android:layout_marginTop="@dimen/common_margin"
        android:background="@drawable/load_shopbg_error" />

   

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_8dp" >

        <TextView
            android:id="@+id/userName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_27dp"
            android:text="@string/user_nickname"
            android:textColor="@color/TextColorBlack"
             />

        <TextView
            android:id="@+id/user_discri_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_3dp"
            android:text="@string/test_msg"
            android:textColor="@color/TextColorGray"
            android:textSize="@dimen/textsize_tw" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginBottom="@dimen/common_margin"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_if_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawablePadding="@dimen/margin_5dp"
            android:drawableTop="@drawable/attentioned_bg"
            android:focusable="false"
            android:text="@string/attentioned"
            android:textColor="@drawable/black_gray_txt"
            android:textSize="@dimen/textsize_tw" />
    </LinearLayout>

</LinearLayout>